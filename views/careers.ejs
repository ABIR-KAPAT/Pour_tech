              </div>
              <!-- end row -->
            </div>
            <!-- ========== title-wrapper end ========== -->

            <!-- ========== form-elements-wrapper start ========== -->
            <div class="form-elements-wrapper">
              <div class="row">
                <div class="col-lg-6">
                  <!-- input style start -->

                  <div class="card-style mb-30">
                    <h6 class="mb-25">Input Fields</h6>
                    <form action="/admin/addCareer" method="post" enctype="multipart/form-data" >
                      <div class="input-style-1">
                        <!-- <label>Banner Title</label> -->
                        <input type="text" name="jobRole" placeholder="Job Role" />
                      </div>
                      <!-- end input -->
                      <div class="input-style-3">
                        <input type="text" name="location" placeholder="Location" rows="5"></input>
                        <span class="icon"><i class="lni lni-text-format"></i></span>
                      </div>
                      <div class="input-style-2">
                        <input type="file" name="image" placeholder="Image" />
                        <span class="icon"> <i class="lni lni-photo"></i> </span>
                      </div>
                      <div class="input-style-1">
                        <!-- <label for="plan_name">Plans Title</label> -->
                        <select name="job_type" id="job_type">
                          <option value="Full Time">Full Time</option>
                          <option value="Part Time">Part Time</option>
                          <option value="Internship">Internship</option>
                          <!-- Add more options as needed -->
                        </select>
                      </div>
                      <!-- end input -->
                      <input class="main-btn active-btn rounded-full btn-hover" value="Submit" type="submit" />
                    </form>
                  </div>

                  <!-- end card -->
                  <!-- ======= input style end ======= -->
                </div>
                <!-- end col -->
                <div class="col-lg-6">
                  <!-- ======= textarea style start ======= -->
                    <div class="card-style mb-30">
                      <h6 class="mb-10">Data Table</h6>
                      <!-- <p class="text-sm mb-20">
                        For basic styling—light padding and only horizontal dividers—use
                        the class table.
                      </p> -->
                      <div class="table-wrapper table-responsive">
                        <table class="table">
                          <thead>
                            <tr>
                              <th class="lead-img">
                                <h6>Image</h6>
                              </th>
                              <th class="lead-title">
                                <h6>Title</h6>
                              </th>
                              <th class="lead-description">
                                <h6>Location</h6>
                              </th>
                              <th class="lead-description">
                                <h6>Type</h6>
                              </th>
                              <th>
                                <h6>Action</h6>
                              </th>
                            </tr>
                            <!-- end table row-->
                          </thead>

                          <% if(career.length>0) {%>
                          <tbody>
                            <% for(let job of career) {%>
                            <tr>
                              <td class="min-width">
                                <div class="lead">
                                  <div class="lead-image">
                                    <img src="/<%= job.job_image%>" alt="" />
                                  </div>
                                </div>
                              </td>
                              <td class="min-width">
                                <p><a href="#0"><%= job.jobRole%></a></p>
                              </td>
                              <td class="min-width">
                                <p><%= job.location%></p>
                              </td>
                              <td class="min-width">
                                <p><%= job.job_type%></p>
                              </td>
                              <td>
                                <div class="action">
                                  <a href="/admin/careerdelete/<%=job._id%>" class="text-danger">
                                    <i class="lni lni-trash-can"></i>
                                  </a>
                                </div>
                              </td>
                            </tr>
                            <!-- end table row -->
                          </tbody>
                          <%}} else {%> No Data Found
                            <% } %>
                        </table>
                        <!-- end table -->
                      </div>
                    </div>
                  <!-- ======= textarea style end ======= -->
                </div>
                <!-- end col -->
              </div>
              <!-- end row -->
            </div>
